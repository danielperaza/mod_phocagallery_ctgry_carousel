<?xml version="1.0" encoding="utf-8"?><extension type="module" client="site" version="2.5.0" method="upgrade">	<name>Phoca Gallery Categories Display</name>	<author>Escope.cz</author>	<creationDate>Mar.2011</creationDate>	<copyright>Copyright (C) Jan Linhart.</copyright>	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>	<authorEmail>admin@escope.cz</authorEmail>	<authorUrl>www.escope.cz</authorUrl>	<version>2.5.0</version>	<description>Shows links, thumbnails, description from PhocaGallery categories.</description>	<files>		<filename module="mod_phocagallery_ctgry">mod_phocagallery_ctgry.php</filename> 		<filename>index.html</filename>		<filename>helper.php</filename>		<filename>changelog.txt</filename>		<folder>css</folder>		<folder>images</folder>		<folder>js</folder>		<folder>tmpl</folder>	</files>        <config>	<fields name="params">            <fieldset name="basic">                <field name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="fieldMODULECLASSSUFFIX" />                <field name="insert_jquery" type="radio" default="1" label="Insert Jquery library" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="round_corners" type="radio" default="1" label="Round corners" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="show_catname" type="radio" default="1" label="Show category name" description="Display category name or not">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="show_read_more" type="radio" default="1" label="Show read more" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="show_description" type="radio" default="1" label="Show description" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="show_date" type="radio" default="1" label="Show date" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="date_format" type="text" default="%a %d %b %Y - %H:%M" label="Date format" description="Formate date like this %a %d %b %Y - %H:%M"></field>                <field name="show_image_count" type="radio" default="1" label="Show image count" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="show_comment_count" type="radio" default="1" label="Show comment count" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="comments_desc" type="text" default="[number] comments" label="Comments description" description="Shows if comment count is showed. Tag [number] will be replaced by actual number."></field>                <field name="show_hit_count" type="radio" default="1" label="Show hit count" description="">                  <option value="0">No</option>                  <option value="1">Yes</option>                </field>                <field name="hits_desc" type="text" default="[number] hits" label="Hits description" description="Shows if hit count is showed. Tag [number] will be replaced by actual number."></field>                <field name="order" type="list" default="ASC" label="Order of appearence" description="">                  <option value="ASC">Ascending</option>                  <option value="DESC">Descending</option>                  <option value="RAND()">Random</option>                </field>                <field name="style" type="filelist" directory="/modules/mod_phocagallery_ctgry/css/" default="style1.css" label="Select css style" description="">                </field>                <field name="thumbnail" type="list" default="m" label="Thumbnails" description="">                  <option value="s">Small</option>                  <option value="m">Medium</option>                  <option value="l">Large</option>                </field>                <field name="category_display" type="list" default="all" label="Display categories" description="">                  <option value="all">All</option>                  <option value="selected">Selected onely</option>                  <option value="not_selected">Not selected onely</option>                  <option value="subcategories">Subcategories of selected ones</option>                </field>                <field                    name="categories"                    type="sql"                    query="SELECT id, title FROM #__phocagallery_categories"                    key_field="id" value_field="title"                    multiple="multiple"                    label="Categories"                    description="Use Ctrl-click to select more than one item.">                </field>                <field name="description_length" type="text" default="140" label="Description length" description="Must be number. Number of chars."></field>                <field name="limit" type="text" default="3" label="Number of categories" description="Must be number."></field>                <field name="limit_images" type="text" default="1" label="Number of images" description="Must be number."></field>                <field name="description_end" type="text" default="..." label="End of description" description="Can be any string."></field>                <field name="read_more" type="text" default="read more" label="Read more text" description="Can be any string."></field>                <field name="border_width" type="text" default="3" label="Border width" description="Work onely if 'Round corners' is checked. Must be number. In pixels."></field>                <field name="corner_radius" type="text" default="4" label="Corner radius" description="Work onely if 'Round corners' is checked. Must be number. In pixels."></field>                <field name="border_color" type="text" default="#d5d5d5" label="Border color" description="Work onely if 'Round corners' is checked. Hexadecimal color like #b9009d."></field>            </fieldset>        </fields>    </config></extension>